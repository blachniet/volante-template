{
  "debug": true,
  "attach": [
    "volante-console",
    "volante-express",
    "volante-dashboard",
    "volante-mongo",
    "volante-swagger"
  ],
  "attachLocal": [
    "src/socket",
    "src/example"
  ],
  "VolanteMongo": {
    "host": "localhost",
    "port": 27017,
    "namespaces": {
      "example": "volante-template.example"
    }
  },
  "VolanteExpress": {
    "bind": "0.0.0.0",
    "port": 3000,
    "cors": ["http://localhost:8080"]
  },
  "VolanteDashboard": {
    "enabled": true,
    "user": "admin",
    "pass": "admin",
    "title": "Hello"
  },
  "VolanteSwagger": {
    "enabled": true,
    "title": "Volante Template Server",
    "description": "Swagger docs for volante-template"
  }
}